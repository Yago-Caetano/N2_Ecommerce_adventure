@model List<CarrinhoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Terrenos no carrinho</h2>
<br />
<table class="table table-responsive">
    <tr>
        <th>Cidade</th>
        <th>Imagem</th>
        <th>Quantidade</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProdutoId - @item.Nome</td>
            <td>
                <img id="imgPreview" src="data:image/jpeg;base64,@item.ImagemEmBase64"
                     class="img-responsive" width="50">
            </td>
            
            <td>@item.Quantidade</td>
        </tr>
    }
</table>
<br />
<a href="/Produtos">Retornar para as compras</a>
<br />
<br />
<a href="/Carrinho/EfetuarPedido">Finalizar Pedido</a>