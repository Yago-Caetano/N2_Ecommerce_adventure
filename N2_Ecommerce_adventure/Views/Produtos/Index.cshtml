@model List<ProdutosViewModel>



<h2 class="titulo-formularios">Relação de Produtos</h2>

<a href="/Produtos/Create">Cadastrar novo produto</a>
<br /> <br/>

<table class="col-md-12 table table-responsive table-striped" style="margin: 0 auto;">
    <tr>
            <th>Ações</th>
            <th>Id</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Desconto</th>
            <th>Quantidade</th>
            <th>Quantidade em ordem</th>
            <th>Categoria</th>
        </tr>

    @foreach (ProdutosViewModel a in Model)
    {
        <tr>
                <td>
                    <a href="Produtos/Edit?id=@a.Id" class="btn btn-info">Editar</a>
                    <a href="javascript:apagarRegistro(@a.Id, 'Produtos')" class="btn btn btn-danger">Apagar</a>
                </td>
                <td>@a.Id</td>
                <td>@a.Nome</td>
                <td>@a.Preço</td>
                <td>@a.Desconto</td>
                <td>@a.Quantidade</td>
                <td>@a.QuantidadeEmOrdem</td>
                <td>@a.Categoria_Produto.Categoria</td>

            </tr>
    }


</table>
