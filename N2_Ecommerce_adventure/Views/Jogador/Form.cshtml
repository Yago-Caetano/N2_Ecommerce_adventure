@model JogadorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Jogador</h2>

<form asp-action="Save" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    @if (ViewBag.Operacao == "A")
    {
        <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    }

    <label for="Nome" class="control-label">Nome</label>
    <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>

    <br />

    <label for="TimeId" class="control-label">Id do Time</label>
    <select asp-for="TimeId" asp-items=ViewBag.TimesFutebol class="form-control"> </select>
    <span asp-validation-for="TimeId" class="text-danger"></span>

    <br />

    <label for="Posicao" class="control-label">Posicao</label>
    <select asp-for="Posicao" asp-items="Html.GetEnumSelectList<JogadorViewModel.Posicoes>()" class="form-control"> </select>
    <span asp-validation-for="Posicao" class="text-danger"></span>



    <br />
    <input type="submit" value="Salvar dados" class="btn-info" />
    &nbsp;&nbsp;&nbsp;
    <a href="/Jogador/index" class="btn-light">Voltar</a>
    <br />
</form>
