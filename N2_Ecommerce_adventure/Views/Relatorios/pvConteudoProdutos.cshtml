@model List<ProdutosViewModel>
{
@if (Model != null)
{
    <table>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Quantidade</th>
        </tr>
        <tr>
            @foreach (ProdutosViewModel p in Model)
            {
                <td>@p.Id</td>
                <td>@p.Nome</td>
                <td>@p.Preço</td>
                <td>@p.Quantidade</td>
            }
        </tr>
    </table>
}

}
