@model List<PedidosViewModel>
{

@if (Model != null)
{
    <table>
        <tr>
            <th>Id</th>
            <th>Cliente</th>
            <th>Data</th>
        </tr>
        <tr>
            @foreach (PedidosViewModel p in Model)
            {
                <td>@p.Id</td>
                <td>@p.Cliente</td>
                <td>@p.data</td>
            }
        </tr>
    </table>

}
}

