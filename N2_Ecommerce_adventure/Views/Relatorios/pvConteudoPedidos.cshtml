@model X.PagedList.IPagedList<PedidosViewModel>
@using X.PagedList.Mvc.Core;

@if (Model != null)
{
    @if (Model.Count > 0)
    {
        <div>
            <p>Somatória Total <b>R$:@ViewBag.Somatoria</b></p>
        </div>

        <table class="m-table-center">
            <tr>
                <th>Id Pedido</th>
                <th>Id Cliente</th>
                <th>Cliente</th>
                <th>Data</th>
                <th>Valor</th>
            </tr>

            @foreach (PedidosViewModel p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Cliente.Id</td>
                    <td>@p.Cliente.Nome</td>
                    <td>@p.data</td>
                    <td>@p.Valor</td>
                </tr>
            }

        </table>
        <div>
            @Html.PagedListPager(Model, pagina => Url.Action("ConsultaAjax", new { pagina }))
        </div>

    }
    else
    {
        <h2>Não há Itens Disponíveis</h2>
        <p>Considere alterar os paramêtros de pesquisa</p>
    }




}

