@model List<PedidosViewModel>

@if (Model != null)
{
    @if (Model.Count > 0)
    {
        <table>
            <tr>
                <th>Id Pedido</th>
                <th>Id Cliente</th>
                <th>Cliente</th>
                <th>Data</th>
                <th>Valor</th>
            </tr>

            @foreach (PedidosViewModel p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Cliente.Id</td>
                    <td>@p.Cliente.Nome</td>
                    <td>@p.data</td>
                    <td>@p.Valor</td>
                </tr>
            }

        </table>

        <div>
            <p>Somatória Total <b>R$:@ViewBag.Somatoria</b></p>
        </div>
    }
    else
    {
        <h2>Não há Itens Disponíveis</h2>
        <p>Considere alterar os paramêtros de pesquisa</p>
    }




}

