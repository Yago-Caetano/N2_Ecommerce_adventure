@model X.PagedList.IPagedList<EnderecoViewModel>
@using X.PagedList.Mvc.Core;
<head>
    <link rel="stylesheet" href="~/css/mContainer.css" />
</head>
<body>
    <div class="m-container">
        <h2>Relação de Endereços</h2>

        <br />
        <a href="/Endereco/Create">Novo Registro</a>
        <br />
        <div class="d-flex flex-column">
            @if (Model.Count > 0)
            {
                <table class="m-table-center">
                    <tr>
                        <th>Ações</th>
                        <th>Id</th>
                        <th>Rua</th>
                        <th>Complemento</th>
                        <th>Número</th>
                        <th>CEP</th>
                        <th>Cidade</th>
                        <th>statusEnd </th>
                    </tr>

                    @foreach (EnderecoViewModel a in Model)
                    {
                        <tr>
                            <td>
                                <a href="Endereco/Edit?id=@a.Id" class="btn btn-info">Editar</a>
                                <a href="javascript:apagarRegistro(@a.Id, 'Endereco')" class="btn btn-danger">Apagar</a>
                            </td>
                            <td>@a.Id</td>
                            <td>@a.Rua</td>
                            <td>@a.Complemento</td>
                            <td>@a.Numero</td>
                            <td>@a.CEP</td>
                            <td>@a.Cidade</td>
                            @if (@a.Ativo)
                            {
                                <td>SIM</td>
                            }
                            else
                            {
                                <td>NÃO</td>
                            }

                        </tr>
                    }


                </table>
                <div>
                    @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))
                </div>
            }
            else
            {

                <div>
                    <h4>Não há dados Disponiveis</h4>
                </div>

            }

        </div>

    </div>
</body>
