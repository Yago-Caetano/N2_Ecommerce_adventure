@model ProdutoPedidoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Itens em pedido</h2>
<form asp-action="SaveItens" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />


    <input type="hidden" Name="idPedido" value="@Model.idPedido" class="form-control disabled" readonly />
    <span asp-validation-for="idPedido" class="text-danger"></span>
    <br />
    @if (ViewBag.Operacao == "I")
    {
        <label for="Produto.Id" class="control-label">Produto Id</label>
        <input type="number" Name="Produto.Id" value="@Model.Produto.Id" class="form-control" />
        <span asp-validation-for="Produto.Id" class="text-danger"></span>
        <br />
    }
    else
    {
        <label for="Produto.Id" class="control-label">Produto Id</label>
        <input type="number" Name="Produto.Id" value="@Model.Produto.Id" class="form-control disabled" readonly />
        <br />
    }

    <label for="Quantidade" class="control-label">Quantidade</label>
    <input type="number" Name="Quantidade" value="@Model.Quantidade" class="form-control" />
    <span asp-validation-for="Quantidade" class="text-danger"></span>
    <br />


    <input type="submit" value="Salvar dados" class="btn-info" />
    &nbsp;&nbsp;&nbsp;
    <a href="/" class="btn-light">Voltar</a>
    <br />
</form>


