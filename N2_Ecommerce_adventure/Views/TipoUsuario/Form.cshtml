@model TipoUsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de TipoUsuario</h2>

<form asp-action="Save" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
    <span asp-validation-for="Id" class="text-danger"></span>

    <label for="Tipo" class="control-label">Tipo de Usuário</label>
    <input type="text" Name="Tipo" value="@Model.Tipo" class="form-control" />
    <span asp-validation-for="Tipo" class="text-danger"></span>

    <br />
    <input type="submit" value="Salvar dados" class="btn-info" />
    &nbsp;&nbsp;&nbsp;
    <a href="/Jogador/index" class="btn-light">Voltar</a>
    <br />
</form>
